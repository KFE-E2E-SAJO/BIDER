{
  "compilerOptions": {
    "jsx": "react-jsx",
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@/components/*": ["src/components/*"],
      "@/lib/*": ["src/lib/*"],
      "@/hooks/*": ["src/hooks/*"],
      "@/utils": ["src/lib/utils"],
      "@/*": ["src/*"]
    }
  },
  "extends": "@repo/typescript-config/base.json",
  "include": [
    "src/**/*",
    ".storybook/**/*",
    "tailwind.config.ts",
    "turbo/generators/**/*",
    "vitest.config.ts",
    "vitest.shims.d.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
