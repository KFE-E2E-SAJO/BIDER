{
  "name": "@repo/ui",
  "version": "0.0.0",
  "private": true,
  "exports": {
    "./*": "./dist/*.js",
    "./styles.css": "./dist/index.css"
  },
  "type": "module",
  "scripts": {
    "lint": "eslint . --max-warnings 15",
    "generate:component": "turbo gen react-component",
    "typecheck": "tsc --noEmit",
    "build:styles": "tailwindcss -i ./src/global.css -o ./dist/index.css",
    "build:components": "tsc && tsc-alias",
    "dev:styles": "tailwindcss -i ./src/global.css -o ./dist/index.css --watch",
    "dev:components": "tsc --watch & tsc-alias --watch"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/tailwind-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@tailwindcss/cli": "^4.1.10",
    "@turbo/gen": "^2.5.0",
    "@types/node": "^22.15.32",
    "@types/react": "19.1.0",
    "@types/react-dom": "19.1.1",
    "eslint": "^9.28.0",
    "tailwindcss": "^4.1.10",
    "tsc-alias": "^1.8.16",
    "typescript": "5.8.2"
  },
  "dependencies": {
    "@radix-ui/react-avatar": "^1.1.10",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "focus-trap-react": "^11.0.4",
    "lucide-react": "^0.515.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwind-merge": "^3.3.1",
    "tw-animate-css": "^1.3.4"
  }
}
